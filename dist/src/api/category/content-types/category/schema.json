{
    "kind": "collectionType",
    "collectionName": "categories",
    "info": {
        "singularName": "category",
        "pluralName": "categories",
        "displayName": "Category",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "services": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::service.service",
            "mappedBy": "category"
        },
        "category_status": {
            "type": "enumeration",
            "enum": [
                "Pending",
                "Approved",
                "Rejected"
            ],
            "required": false,
            "default": "Pending"
        },
        "category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category",
            "inversedBy": "categories"
        },
        "categories": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::category.category",
            "mappedBy": "category"
        },
        "icon": {
            "allowedTypes": [
                "images",
                "files"
            ],
            "type": "media",
            "multiple": false
        },
        "backgroundColor": {
            "type": "string"
        },
        "companies": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::company.company",
            "mappedBy": "category"
        }
    }
}

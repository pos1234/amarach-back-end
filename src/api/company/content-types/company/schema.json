{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "singularName": "company",
    "pluralName": "companies",
    "displayName": "Company",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "url",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "companies"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "company"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files",
        "images"
      ]
    },
    "featuredImages": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "services": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::service.service",
      "mappedBy": "company"
    },
    "location": {
      "type": "string"
    },
    "summary": {
      "type": "text"
    },
    "social_accounts": {
      "type": "component",
      "repeatable": false,
      "component": "shared.social"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "company"
    },
    "phoneNumber": {
      "type": "string"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "payment_tier": {
      "type": "enumeration",
      "enum": [
        "gold",
        "silver",
        "bronze",
        "none"
      ],
      "default": "none"
    },
    "sort_order": {
      "max": 3,
      "default": 0,
      "type": "integer",
      "min": 0
    },
    "blogs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog.blog",
      "mappedBy": "company"
    }
  }
}
